<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".SignupActivity">

    <ScrollView
        android:id="@+id/scrollbar1"
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayou1"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/alpha"
                android:padding="5dp"
                android:layout_marginTop="10dp"/>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/textinputtype"
                android:padding="5dp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@color/white">

                <EditText
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User Name"
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:inputType="textEmailAddress|textAutoComplete"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:scrollbars="horizontal"
                    android:scrollHorizontally="true"
                    android:lines="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/text2"
                    android:imeOptions="actionNext"
                    android:fadingEdgeLength="16sp"
                    android:drawableLeft="@drawable/ic_username"
                    android:background="@drawable/bottom_border_white"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/textinputtype1"
                android:padding="5dp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@color/white">

                <EditText
                    android:id="@+id/emailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email-ID"
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:inputType="textEmailAddress|textAutoComplete"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:scrollbars="horizontal"
                    android:scrollHorizontally="true"
                    android:lines="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/text2"
                    android:imeOptions="actionNext"
                    android:fadingEdgeLength="16sp"
                    android:drawableLeft="@drawable/ic_email"
                    android:background="@drawable/bottom_border_white"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/textinputtype2"
                android:padding="5dp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@color/white">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:inputType="textWebPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:scrollbars="horizontal"
                    android:scrollHorizontally="true"
                    android:lines="1"
                    android:background="@drawable/bottom_border_white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text2"
                    android:drawableLeft="@drawable/ic_phone"
                    android:imeOptions="actionNext"
                    android:fadingEdgeLength="16sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/textinputtype3"
                android:padding="5dp"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@color/white">

                <EditText
                    android:id="@+id/retypePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Retype-Password"
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:inputType="textWebPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:scrollbars="horizontal"
                    android:scrollHorizontally="true"
                    android:lines="1"
                    android:background="@drawable/bottom_border_white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text2"
                    android:imeOptions="actionNext"
                    android:fadingEdgeLength="16sp"
                    android:drawableLeft="@drawable/ic_phone"/>

            </android.support.design.widget.TextInputLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/enter_number"
                android:background="@drawable/bottom_border_white"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:hint="Enter Phone Number for Security"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:maxLines="1"/>

            <Button
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="SignUp!"
                android:textSize="@dimen/text2"
                android:background="@drawable/white_rounded_button"
                android:layout_margin="10dp" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>